import UIKit

class <%= @name %>Coordinator: Coordinator {
    
    var <%= @name %>ViewController:<%= @name %>ViewController?
    var parentViewController: UIViewController?
    
    init(parentViewController: UIViewController?)
    {
        self.parentViewController = parentViewController
    }
    
    func start()
    {
        
        let storyboard = UIStoryboard(name: "<%= @name %>Storyboard", bundle: nil)
        <%= @name %>ViewController = storyboard.instantiateViewController(withIdentifier: "<%= @name %>ViewController") as? <%= @name %>ViewController
        
        guard let <%= @name %>ViewController = <%= @name %>ViewController else { return }
        
        let viewModel =  <%= @name %>ViewModel()
        viewModel.coordinatorDelegate = self
        <%= @name %>ViewController.viewModel = viewModel
        
        // appropriate navigation here. E.g....
//        if let parentNC = parentViewController.navigationController {
//            parentNC.pushViewController(<%= @name %>ViewController, animated: true)
//        }
    
    }
    
}

